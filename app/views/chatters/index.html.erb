
<div id="chatters">
  <% @chatters.each do |chatter| %>
    <%= render chatter %>
    <% if chatter.user == current_user %>
    <p>
      <%= link_to "Show", chatter, class:"btn btn-secondary" %>
    </p>
    <% end %>
  <% end %>
</div>

<%= link_to "New chatter", new_chatter_path, class:"btn btn-primary" %>
